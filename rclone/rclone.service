[Unit]
Description=Rclone
AssertPathIsDirectory=/root/od
After=network-online.target

[Service]
Type=simple
ExecStart=/usr/bin/rclone mount od:/ /root/od \
 --vfs-cache-mode off \
 --umask 0000 \
 --default-permissions \
 --allow-non-empty \
 --allow-other \
 --transfers 3 \
 --buffer-size 32M \
 --low-level-retries 200
ExecStop=/bin/fusermount -u /root/od
Restart=on-abort
User=root

[Install]
WantedBy=default.target
